class User:
    def __init__(self,name,password,is_admin,change_password,country):
        self.new_password = change_password
        self.name = name
        self.password = password
        self.country = country
        self.is_admin = is_admin

class Admin(User):
    def __init__(self,name,password,change_password,country):
        super().__init__(name,password,True,change_password,country)

    def promote_user_to_admin(self,user):
        user.is_admin = True
        print ("This user has been promoted to admin")
    def reset_password(self,user,new_password):
        user.new_password = True
        print ("This password has been reset")
    def delete_user(self,user):
        print ("This user has been deleted")
